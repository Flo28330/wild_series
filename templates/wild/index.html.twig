{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{%  block body %}
<h1>All series in the program table :</h1>
        {% for program in programs %}
    <div>
        <div class="col-4">
        <h2>{{ loop.index }} / {{ program.title }} - Category : {{  program.category.name }}</h2>
        <img class="img-thumbnail m-3" style="height: 300px" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <p>{{  program.summary }}</p>
        </div>
    </div>
    {% else %}
        No series found.
    {% endfor %}
    <a href="{{ path('app_index') }}">
     Back to home page
    </a>
    </div>
{% endblock %}
